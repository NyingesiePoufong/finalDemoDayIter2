<!doctype html>
<html>
<head>
    <title>LMS Sign-Up</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="responsive.css">
    <link rel="stylesheet" href="owl.transitions.css">
    <link rel="stylesheet" href="owl.theme.css">
    <link rel="stylesheet" href="jquery.fancybox.css">
    <link rel="stylesheet" href="fontello.css">
    <link rel="stylesheet" href="bootstrap.min.css">
    <link rel="stylesheet" href="audioplayer.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Signup</h1>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name" placeholder="First & Last Name">
        </div>
        <div class="form-group">
            <label>Emergency Contact Parent Info</label>
            <input type="text" class="form-control" name="parentContactInfo" placeholder="Enter Parent's Number">
        </div>

        <select name="role">
<option value="teacher">Teacher</option>
<option selected value="student">Student</option>
<option value="parent">Parent</option>
</select>

        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>
</div>
</body>
</html>
