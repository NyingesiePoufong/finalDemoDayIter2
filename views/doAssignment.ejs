<h1>take this quiz</h1>


<div class="quizQuestions">
  <form class="" action="/studentAnswer" method="post">
    <input type="hidden" name="quizId" value="<%=quiz._id%>">
  <ol>
    <% for(var i = 0; i < quiz.questions.length; i++) { %>
        <li><%=quiz.questions[i].prompt%>
          <input type="hidden" name="" value="">
              <span><%=quiz.questions[i].answerA%> <input type="radio" name="answer<%=i%>" value="0"></span>
              <span><%=quiz.questions[i].answerB%> <input type="radio" name="answer<%=i%>" value="1"></span>
              <span><%=quiz.questions[i].answerC%> <input type="radio" name="answer<%=i%>" value="2"></span>
              <span><%=quiz.questions[i].answerD%> <input type="radio" name="answer<%=i%>" value="3"></span>
        </li>
    <% } %>
  </ol>
  <button type="submit" name="button">Submit</button>
</form>
</div>
